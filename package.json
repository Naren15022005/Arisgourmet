{
  "name": "arisgourmet-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only backend/src/main.ts",
    "start": "node backend/dist/main.js",
    "build": "tsc -p backend/tsconfig.json",
    "migrate:run": "ts-node ./scripts/run-migrations.ts",
    "start:worker": "ts-node ./backend/src/workers/outbox-processor.ts",
    "start:outbox": "ts-node ./backend/src/workers/outbox-processor.ts",
    "test": "jest --runInBand",
    "lint": "eslint 'src/**/*.{ts,js}' --ext .ts --max-warnings=0"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^14.0.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.4.3",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.3.3"
  }
}
